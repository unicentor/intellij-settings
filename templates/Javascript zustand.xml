    <context>
      <option name="JAVA_SCRIPT" value="true" />
    </context>
  </template>
  <template name="usez" value="const $name$ = use$store$Store$END$((state) =&gt; state.$name$);&#10;" description="use zustand" toReformat="false" toShortenFQNames="true">
